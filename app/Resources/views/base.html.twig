<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav">
                        <li><a href="{{ path('mission') }}">Missions</a></li>
                        {% if is_granted("ROLE_ADMIN") %}
                            <li><a href="{{ path('client') }}">Clients</a></li>
                            <li><a href="{{ path('domaine') }}">Domaines</a></li>
                            <li><a href="{{ path('employe') }}">Employés</a></li>
                            <li><a href="{{ path('metier') }}">Métiers</a></li>
                            <li><a href="{{ path('niveau') }}">Niveaux</a></li>
                            <li><a href="{{ path('specialitemetier') }}">Spécialités métier</a></li>
                            <li><a href="{{ path('type') }}">Types</a></li>
                            <li><a href="{{ path('typeprestation') }}">Types prestation</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>

        <div class="hero-unit">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
