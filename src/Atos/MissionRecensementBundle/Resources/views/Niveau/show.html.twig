{% extends 'AtosMissionRecensementBundle::layout.html.twig' %}

{% block title %}
    Niveau - {{ entity.nom }}
{% endblock %}

{% block pre_container %}
    <h1>Niveau</h1>
{% endblock %}

{% block container -%}

    <table class="record_properties table table-hover table-striped table-condensed">
        <tbody>
            <tr>
                <th>Niveau</th>
                <td>{{ entity.nom }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('niveau') }}">
            Retour à la liste
        </a>
    </li>
    <li>
        <a href="{{ path('niveau_edit', { 'id': entity.id }) }}">
            Éditer
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
