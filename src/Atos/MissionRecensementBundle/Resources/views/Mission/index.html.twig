{% extends 'AtosMissionRecensementBundle::layout.html.twig' %}

{% block title -%} 
    Liste des missions
{% endblock %}

{% block body -%}
    <h1>Liste de missions</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Employé</th>
                <th>Intitulé de la mission</th>
                <th>Client</th>
                <th>Type de prestation</th>
                <th>Métier</th>
                <th>Domaine</th>
                <th>Sous-domaine</th>
                <th>Type</th>
                <th>Date début</th>
                <th>Durée</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('mission_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>TODO</td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.client }}</td>
                <td>{{ entity.typePrestation }}</td>
                <td>{{ entity.metier }}</td>
                <td>TODO</td>
                <td>TODO</td>
                <td>{{ entity.type }}</td>
                <td>{% if entity.dateDebut %}{{ entity.dateDebut|date('d/m/Y') }}{% endif %}</td>
                <td>
                    {% if entity.dateFin %}
                        {% if entity.dureeAnnees == 1 %} 
                            1 an et 
                        {% elseif entity.dureeAnnees > 1 %}
                            {{ entity.dureeAnnees }} ans et
                        {% endif %}
                        {{ entity.dureeMois }} mois
                    {% else %}
                        Mission en cours
                    {% endif %}
                <td>
                <ul>
                    <li>
                        <a href="{{ path('mission_show', { 'id': entity.id }) }}">Visualiser</a>
                    </li>
                    <li>
                        <a href="{{ path('mission_edit', { 'id': entity.id }) }}">Éditer</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('mission_new') }}">
                Créer une nouvelle entrée
            </a>
        </li>
    </ul>
    {% endblock %}
