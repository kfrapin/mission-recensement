{% extends 'AtosMissionRecensementBundle::layout.html.twig' %}

{% block title -%} 
    Liste des domaines 
{% endblock %}

{% block pre_container %}
    <h1>Liste des domaines</h1>
{% endblock %}

{% block container -%}

    <table class="records_list table table-hover table-striped table-condensed">
        <thead>
            <tr>
                <th>Domaine</th>
                <th>Domaine parent</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.nom }}</td>
                {% if entity.domaineParent %}</td>
                    <td>{{ entity.domaineParent.nom }}</td>
                {% else %}
                    <td><i>Aucun</i></td>
                {% endif %}
                <td>
                <div>
                    <div>
                        <a href="{{ path('domaine_show', { 'id': entity.id }) }}">{{ icon('eye-open') }} Visualiser</a>
                    </div>
                    <div>
                        <a href="{{ path('domaine_edit', { 'id': entity.id }) }}">{{ icon('pencil') }} Éditer</a>
                    </div>
                </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div>
        <div>
            <a href="{{ path('domaine_new') }}">
                {{ icon('plus') }} Créer une nouvelle entrée
            </a>
        </div>
    </div>
    {% endblock %}
