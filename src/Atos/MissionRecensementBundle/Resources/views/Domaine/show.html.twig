{% extends 'AtosMissionRecensementBundle::layout.html.twig' %}

{% block title %}
    Domaine - {{ entity.nom }}
{% endblock %}

{% block pre_container %}
    <h1>Domaine</h1>
{% endblock %}

{% block container -%}

    <table class="record_properties table table-hover table-striped table-condensed">
        <tbody>
            <tr>
                <th>Domaine</th>
                <td>{{ entity.nom }}</td>
            </tr>
            <tr>
                <th>Domaine parent</th>
                {% if entity.domaineParent %}</td>
                    <td>{{ entity.domaineParent.nom }}</td>
                {% else %}
                    <td><i>Aucun</i></td>
                {% endif %}
            </tr>
        </tbody>
    </table>

<div class="record_actions">
    <div class="btn-toolbar" role="toolbar">
        <div class="btn-group">
            <a href="{{ path('domaine') }}">
                <button type="button" class="btn btn-primary">{{ icon('th-list') }} Retour à la liste</button>
            </a>
        </div>
        <div class="btn-group">
            <a href="{{ path('domaine_edit', { 'id': entity.id }) }}">
                        <button type="button" class="btn btn-warning">{{ icon('pencil') }} Éditer</button>
            </a>
        </div>
        <div class="btn-group">{{ form(delete_form) }}</div>
    </div>
</div>
{% endblock %}
